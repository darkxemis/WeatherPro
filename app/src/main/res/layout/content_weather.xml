<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:alpha="0.5"
    android:background="@drawable/fondo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.josemi.weatherpro.WeatherActivity"
    tools:showIn="@layout/app_bar_weather">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/city"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:gravity="top|center"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/container"
        android:layout_alignEnd="@+id/container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/date"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:gravity="top|center"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/container"
        android:layout_alignEnd="@+id/container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        style="?android:attr/textAppearanceMedium"
        android:id="@+id/condIconTitule"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/city"
        android:layout_toLeftOf="@+id/temperature"
        android:layout_toStartOf="@+id/temperature" />

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="113dp"
            android:layout_height="113dp"
            style="?android:attr/textAppearanceMedium"
            android:id="@+id/condIcon"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:id="@+id/description"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            android:gravity="top|center"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/frameLayout"
            android:layout_alignEnd="@+id/frameLayout"
            android:layout_alignLeft="@+id/frameLayout"
            android:layout_alignStart="@+id/frameLayout"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:id="@+id/humidity"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"
            android:gravity="top|center"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_above="@+id/temperature"
            android:layout_centerHorizontal="true" />

    </FrameLayout>

    <TextView
        android:id="@+id/temperature"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="113dp"
        android:layout_height="85dp"

        android:textStyle="bold"
        android:textSize="70dp"
        android:gravity="center_horizontal"

        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout" />
    />

</RelativeLayout>
